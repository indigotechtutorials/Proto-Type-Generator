<%= turbo_stream_from @project %>
<% content_for :title, @project.name %>
<% @classes_for_container = "" %>
<div class="w-full p-4">
  <h1 class="font-bold text-4xl"><%= @project.name %> </h1>
  <div class="w-full h-[80vh] grid grid-cols-2">
    <div class="w-full h-full" id="code-preview"> 
      <% if @project.code_iterations.any? %>
        <%= render "code_iteration", code_iteration: @project.code_iterations.last %>
      <% end %>
    </div>
    <div class="w-full h-full flex flex-col p-4"> 
      <div class="mt-auto">
        <%= form_with url: project_code_iterations_path(@project) do |f| %>
          <%= f.text_area :body, class: "w-full textarea" %>
          <%= f.submit "Send", class: "btn btn-primary w-full mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
