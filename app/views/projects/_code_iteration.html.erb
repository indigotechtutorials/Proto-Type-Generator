<% if code_iteration.preview.attached? %>
  <%= image_tag code_iteration.preview %>
<% else %>
  <span class="text-xl text-gray-100"> No preview is available please try again </span>
<% end %>

<!-- change popover-1 and --anchor-1 names. Use unique names for each dropdown -->
<button class="btn" popovertarget="popover-1" style="anchor-name:--anchor-1">
  Code
</button>

<ul class="dropdown menu w-full rounded-box bg-base-100 shadow-sm"
  popover id="popover-1" style="position-anchor:--anchor-1">
  <%= code_iteration.code_content %>
</ul>

<!-- change popover-1 and --anchor-1 names. Use unique names for each dropdown -->
<button class="btn" popovertarget="popover-2" style="anchor-name:--anchor-1">
  AI Response
</button>

<ul class="dropdown menu w-full rounded-box bg-base-100 shadow-sm"
  popover id="popover-2" style="position-anchor:--anchor-1">
  <%= code_iteration.ai_response %>
</ul>